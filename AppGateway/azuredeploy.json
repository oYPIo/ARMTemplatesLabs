{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentURL": {
      "type": "string",
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "projectName": {
      "type": "string",
      "metadata": {
        "description": "Specifies a name for generating resource names."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Specifies the location for all resources."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Specifies a username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies a password for the Virtual Machine."
      }
    },
    "adminPublicKey": {
      "type": "string",
      "metadata": {
        "description": "Specifies the SSH rsa public key file as a string. Use \"ssh-keygen -t rsa -b 2048\" to generate your SSH key pairs."
      }
    },
    "applicationGatewaySize": {
      "type": "string",
      "allowedValues": [
        "Standard_Small",
        "Standard_Medium",
        "Standard_Large"
      ],
      "defaultValue": "Standard_Small",
      "metadata": {
        "description": "application gateway size"
      }
    },
    "frontendPort": {
      "type": "int",
      "defaultValue": 8080,
      "metadata": {
        "description": "application gateway front end port"
      }
    }

  },
  "variables": {
    "vNetName": "vehicleAppVnet",
    "vNetAddressPrefixes": "10.0.0.0/16",
    "vNetSubnetName": "webServerSubnet",
    "vNetSubnetAddressPrefix": "10.0.1.0/24",
    "WebServiceTemplateName": "vehicalWebService",
    "WebServiceTemplateURI": "[uri(parameters('deploymentURL'), 'vehicalWebService.json')]",
    "vNetAppGatewaySubnetName": "appGatewaySubnet",
    "vNetAppGatewaySubnetAddressPrefix": "10.0.0.0/24",
    "publicAppGatewayIPAddress": "appGatewayPublicIp",
    "networkSecurityGroupName": "[concat(parameters('projectName'), '-nsg')]",
    "appServicePlanName": "vehicleAppServicePlan",
    "appServicePlanSKU": "S1",
    "applicationGatewayName": "vehicleAppGateway"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2018-11-01",
      "name": "[variables('networkSecurityGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "ssh_rule",
            "properties": {
              "description": "Locks inbound down to ssh default port 22.",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 123,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2018-11-01",
      "name": "[variables('publicAppGatewayIPAddress')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Static",
        "dnsSettings": {
          "domainNameLabel": "[concat('vehicleapp',uniqueString(resourceGroup().id))]"
        }
      },
      "sku": {
        "name": "Standard"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2018-11-01",
      "name": "[variables('vNetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vNetAddressPrefixes')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vNetSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vNetSubnetAddressPrefix')]"
            }
          },
          {
            "name": "[variables('vNetAppGatewaySubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vNetAppGatewaySubnetAddressPrefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('WebServiceTemplateName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceID('Microsoft.Network/networkSecurityGroups',variables('networkSecurityGroupName'))]",
        "[resourceID('Microsoft.Network/virtualNetworks',variables('vNetName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('WebServiceTemplateURI')]"
        },
        "parameters": {
          "projectName": {
            "value": "[parameters('projectName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "location": {
            "value": "[resourceGroup().location]"
          },
          "adminPublicKey": {
            "value": "[parameters('adminPublicKey')]"
          },
          "customData": {
            "value": "vmconfig.sh"
          },
          "branch": {
            "value": "appService"
          },
          "vNetSubnetID": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vNetName'), variables('vNetSubnetName'))]"
          },
          "numberOfInstances": {
            "value": 2
          }
        }
      }
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    },
    "sadas": {
      "type": "array",
      "value": "[reference(variables('WebServiceTemplateName')).outputs.resourceID.value]"
    }
  }
}
